
@{
    ViewBag.Title = "IAU-BSC | Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var data = ViewBag.AboutData as Web.Models.DomainInfo;
}
<link href="~/Design/CSS/contactus.css" rel="stylesheet" />
<style>
    th, td {
        color: white;
        text-align: center;
    }

    a {
        color: white;
    }
</style>
@{
    var isar = Request.Cookies["lang"]?.Value == "ar";
}
<div style="justify-content: center; align-items: center; display: flex; height: 84vh;">
    <table class="table" dir="@(isar?"rtl":"ltr")">
        <tr>
            <th>
                @(
                isar?
                "العنوان" :
                "Address"
                )
            </th>
            <td>
                @(
                isar?
                data.Address :
                data.Address
                )
            </td>
        </tr>
        <tr>
            <th>
                @(
                isar?
                "هاتف" :
                "Phone"
                )
            </th>
            <td>
                <a href="tel:@data.Phone">@data.Phone</a>
            </td>
        </tr>
        <tr>
            <th>
                @(
                isar?
                "البريد الالكتروني" :
                "Email"
                )
            </th>
            <td>
                <a href="mailto:@data.Mail">@data.Mail</a>
            </td>
        </tr>
    </table>
</div>
