            </div>
            </fieldset>*@
            <fieldset>
                <legend>Sub Domains</legend>
                <div class="container">
                    @{
                        var count = 0;
                    }
                    @foreach (var i in ListOFSubDomains.SubDomainsEnum)
                    {
                        <div class="row w-100">
                            <input name="SubDomains[@count].Key" hidden value="@i.Value" />
                            <div class="form-group">
                                <label class="control-label">@i.Name</label>
                                <input name="SubDomains[@count].Domain" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label"></label>
                                <label class="form-check-label">
                                    Https?
                                    <input class="form-check-input form-control" type="checkbox" name="SubDomains[@count].UseHttps" /> 
                                </label>
                            </div>
                        </div>
                        count++;
                    }
                </div>
            </fieldset>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>



