</style>
<h1>Create</h1>

<h4>New Domain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <fieldset>
                <legend>Main Info</legend>
                <div class="container">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Domain1" class="control-label">Domain</label>
                        <input asp-for="Domain1" class="form-control" />
                        <span asp-validation-for="Domain1" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConnectionString" class="control-label"></label>
                        <input asp-for="ConnectionString" class="form-control" />
                        <span asp-validation-for="ConnectionString" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>Home Page Setting</legend>
                <div class="container">
                    <div class="form-group">
                        <label asp-for="HomeSettings._NewReqICo" class="control-label"></label>
                        <input asp-for="HomeSettings._NewReqICo" class="form-control" />
                        <span asp-validation-for="HomeSettings._NewReqICo" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HomeSettings._FollowIco" class="control-label"></label>
                        <input asp-for="HomeSettings._FollowIco" class="form-control" />
                        <span asp-validation-for="HomeSettings._FollowIco" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="HomeSettings.EnableAcadamic" /> @Html.DisplayNameFor(model => model.HomeSettings.EnableAcadamic)
                        </label>
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <legend>About Data</legend>
                <div class="container">
                    <div class="form-group">
                        <label asp-for="DomainInfo.Phone" class="control-label"></label>
                        <input asp-for="DomainInfo.Phone" class="form-control" />
                        <span asp-validation-for="DomainInfo.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainInfo.Mail" class="control-label"></label>
                        <input asp-for="DomainInfo.Mail" class="form-control" />
                        <span asp-validation-for="DomainInfo.Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainInfo.Address" class="control-label"></label>
                        <input asp-for="DomainInfo.Address" class="form-control" />
                        <span asp-validation-for="DomainInfo.Address" class="text-danger"></span>
                    </div>
                </div>

            </fieldset>

            <fieldset>
                <legend>Main Style Info</legend>
                <div class="container">
                    <div class="form-group">
                        <label asp-for="DomainStyle._FavIcon" class="control-label"></label>
                        <input asp-for="DomainStyle._FavIcon" class="form-control" />
                        <span asp-validation-for="DomainStyle._FavIcon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainStyle._Icon" class="control-label"></label>
                        <input asp-for="DomainStyle._Icon" class="form-control" />
                        <span asp-validation-for="DomainStyle._Icon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainStyle.Title" class="control-label"></label>
