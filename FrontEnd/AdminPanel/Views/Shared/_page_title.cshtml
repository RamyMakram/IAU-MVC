<!-- start page title -->
<div class="row" style="margin-top:25px">
	<div class="col-12">
		<div class="page-title-box d-flex align-items-center justify-content-between">
			@{
				if (Request.Cookies["lang"].Value == "en")
				{
					<h4 class="mb-0 font-size-18">@ViewBag.pTitle</h4>

					<div class="page-title-right">
						<ol class="breadcrumb m-0">
							<li class="breadcrumb-item">
								<a href="javascript: void(0);">
									@{
										var data = "";
										if (ViewBag.pageTitle != null)
										{
											data=(ViewBag.pageTitle as string).Replace(",null", "").Replace(", ", "").Replace(",", " / ");}

										}
								@data
							</a>
						</li>
						<li class="breadcrumb-item active">@ViewBag.pTitle</li>
					</ol>
				</div>
			}
			if (Request.Cookies["lang"].Value == "ar")
			{
				<h4 class="mb-0 font-size-18">@ViewBag.arpTitle</h4>

				<div class="page-title-right">
					<ol class="breadcrumb m-0">
						<li class="breadcrumb-item">
						<li class="breadcrumb-item">
							<a href="javascript: void(0);">
								@{
										var data = "";
										if (ViewBag.arpageTitle != null)
										{
											data=(ViewBag.arpageTitle as string).Replace(",null", "").Replace(", ", "").Replace(",", " / ");}

										}
								@data
							</a>
						</li>
						<li class="breadcrumb-item active">@ViewBag.arpTitle</li>
					</ol>
				</div>
			}
			}
		</div>
	</div>
</div>
<!-- end page title -->
