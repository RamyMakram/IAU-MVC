            text-align: center !important;
            justify-content: center !important;
            align-items: center;
            display: flex !important;
        }

        .eform-body tr {
            display: flex;
            flex-direction: column;
        }

        .form-control {
            width: 100%;
        }

        .modal-dialog-eform {
            max-width: 56vw !important;
            width: 100%
        }

            .modal-dialog-eform > .modal-content > .modal-header {
                display: none
            }

        .modal-dialog-eform {
            max-width: 89vw !important;
            width: 100% !important;
        }
