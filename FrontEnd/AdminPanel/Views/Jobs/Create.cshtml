@model IAUAdmin.DTO.Entity.JobDTO

@{
    ViewBag.Title = "Create Job";
    ViewBag.pTitle = "Create Job";
    ViewBag.pageTitle = "Jobs";
    ViewBag.arTitle = "اضافة وظيفة";
    ViewBag.arpTitle = "الوظائف";
    ViewBag.arpageTitle = "اضافة وظيفة";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- select2 css -->
<link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

<!-- dropzone css -->
<link href="~/assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
<style>


    label.control-label::after {
        content: ":";
    }

    label.control-label {
        font-weight: bold;
    }
</style>
@{
    var isAr = Request.Cookies["lang"].Value == "ar";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <h4 class="card-title" key="t-basicInfo">Basic Information</h4>
                <p class="card-title-desc" key="t-fillrequired">Fill all information below</p>

                <form id="form55">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label" for="Name_AR" key="t-name">Job Name</label>
                                @Html.TextBoxFor(q => q.User_Permissions_Type_Name_AR, new { @class = "form-control ar-font", @id = "Name_AR", @required = "true" })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            @if ((ViewBag.CanBeModear as Nullable<bool>).Value)
                            {
                                <div class="form-group">
                                    <div class="custom-control custom-checkbox mb-3">
                                        @Html.CheckBoxFor(q => q.IsModear, new { @class = "custom-control-input", @name = "Ename", @id = "customCheck1", @type = "checkbox" })
                                        <label class="custom-control-label" for="customCheck1">@(isAr ? "تعيين كمدير؟":"Set As Admin")</label>
                                    </div>
                                </div>
                            }

                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="control-label" for="Name_EN" key="t-enname">Job English Name</label>
                                @Html.TextBoxFor(q => q.User_Permissions_Type_Name_EN, new { @class = "form-control en-font", @id = "Name_EN", @required = "true" })
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>


        <div class="card">
            <div class="card-body">

                <h4 class="card-title" key="t-jobPrivilges">Privileges</h4>

                <div class="row">
                    @foreach (var i in Model.Permissions)
                    {

                        if (i.Sub.Count != 0 || i.Details.Count != 0)
                        {
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="control-label" style="font-weight:bolder">@Html.DisplayName(isAr ? i.Name : i.Name_EN)</label>
                                    <div style="margin:0 10px">
                                        @{
                                            if (i.Sub.Count != 0)
                                            {
                                                foreach (var c in i.Sub)
                                                {
                                                    <div class="custom-control custom-switch mb-3" dir="ltr">
                                                        <input type="checkbox" class="custom-control-input" onchange="cc('@(c.ID)',this)" id=@("customSwitch" + c.ID) checked=@c.Active>
                                                        <label class="custom-control-label" for=@("customSwitch" + c.ID)>@(isAr?c.Name:c.Name_EN)</label>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                foreach (var c in i.Details)
                                                {
                                                    <div class="custom-control custom-switch mb-3" dir="ltr">
                                                        <input type="checkbox" class="custom-control-input" onchange="cc('@(c.ID)',this)" id=@("customSwitch" + c.ID) checked=@c.Active>
                                                        <label class="custom-control-label" for=@("customSwitch" + c.ID)>@(isAr?c.Name:c.Name_EN)</label>
                                                    </div>
                                                }
                                            }
                                        }


                                    </div>
                                </div>
                            </div>
                        }

                    }
                </div>

                <button class="btn btn-primary mr-1 waves-effect waves-light" onclick="SaveJob()" key="t-save">Save Changes</button>
                <button type="reset" class="btn btn-secondary waves-effect" key="t-cancel">Cancel</button>

            </div>
        </div>
    </div>
</div>

<!-- end row -->
<!-- JAVASCRIPT -->
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>
<script src="~/assets/js/lang/jquery.multiLanguage.js"></script>

<!-- select 2 plugin -->
<script src="~/assets/libs/select2/js/select2.min.js"></script>

<!-- dropzone plugin -->
<script src="~/assets/libs/dropzone/min/dropzone.min.js"></script>

<!-- init js -->
<script src="~/assets/js/pages/ecommerce-select2.init.js"></script>
<script src="~/assets/libs/jquery-validate/jquery.validate.js"></script>
@if (isAr)
{
    <script src="~/assets/libs/jquery-validate/localization/messages_ar.js"></script>
}
<!-- App js -->
<script src="~/assets/js/app.js"></script>
<script>
    $("#form55").validate();
    let Added = []
    function cc(val, html) {
        if (html.checked)
            Added.push({ PrivilageID: val })
        else
            Added.splice(Added.findIndex(q => q.PrivilageID == val), 1);
    }
    function SaveJob() {
        if ($('#form55').valid()) {
            let data = {
                "User_Permissions_Type_Name_AR": document.getElementById('Name_AR').value,
                "User_Permissions_Type_Name_EN": document.getElementById('Name_EN').value,
                "Job_Permissions": Added
            }
            //console.log(data)
            let fileData = new FormData();
            fileData.append('Job', JSON.stringify(data));
            $.ajax({
                url: `/Jobs/SaveJob`,
                type: "POST",
                processData: false,
                contentType: false,
                enctype: 'multipart/form-data',
                data: fileData,
                success: function (res) {
                    location.href = "/Jobs"
                },
                error: function () {

                },
            })
        }
    }
</script>