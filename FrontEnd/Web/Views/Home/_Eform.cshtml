@model IAU.DTO.Entity.E_FormsDTO
<style>
    :root {
        --main-btn-color: #0a1332 !important;
    }

    #saudiArabiTitlr, #MIMIS {
        margin-top: 36px;
    }

    .eform-section label {
        padding: 10px;
        height: 100%;
        border: 1px solid #f4f4f4
    }

    .border-section {
        border: 1px solid #f4f4f4
    }

    .modal-dialog-eform {
        width: 68vw !important;
        max-width: unset !important;
    }

    [data-id] {
        margin: 10px 0;
        align-items: center;
    }

    [data-id^="C"] div:nth-of-type(1), [data-id^="R"] div:nth-of-type(1) {
        max-width: 250px;
        width: 250px;
    }

    [data-id^="C"] div:nth-of-type(2), [data-id^="R"] div:nth-of-type(2) {
        width: 48% !important;
    }

    [data-id].col-md-6 > label {
        max-width: 292px;
        width: 292px !important;
        margin: 0 10px;
    }

    [data-id]:not(.col-md-6) > label {
        margin: 10px;
    }

    [data-id]:not(.col-md-6) > div {
        margin: 0 25px;
    }

    .form-control {
        max-height: 37px !important;
        color: white;
        background: #283758;
    }

    @@media(max-width:1200px) {
        [data-id] {
            flex-direction: column !important;
        }
        [data-id^="C"] div:nth-of-type(2), [data-id^="R"] div:nth-of-type(2) {
            width: 100% !important;
        }
            [data-id].col-md-6 > label {
                max-width: unset;
                width: 100% !important;
            }

        #uninadee {
            display: flex !important;
            flex-direction: column !important;
        }
    }

    @@media(max-width:770px) {
        #MIMIS{
            text-align:center
        }
        .modal-body, .modal-header {
            padding: 10px !important;
        }
        #EformNameHandelCom {
            display: flex !important;
            flex-direction: column !important;
        }

            #EformNameHandelCom div {
                justify-content: center !important;
            }

        #uninadee div {
            display: flex !important;
            flex-direction: column !important;
        }

        #saudiArabiTitlr, #MIMIS {
            margin-top: 0px;
        }

        .eform-body tr {
            display: flex;
            flex-direction: column;
        }

        .form-control {
            width: 100%;
        }

        .modal-dialog-eform {
            max-width: 56vw !important;
            width: 100%
        }

            .modal-dialog-eform > .modal-content > .modal-header {
                display: none
            }

        .modal-dialog-eform {
            max-width: 89vw !important;
            width: 100% !important;
        }
    }

    .modal-dialog-eform {
        width: 68vw !important;
        max-width: unset !important;
    }

    td {
        width: 100%;
    }

        td div {
            margin: 0 20px;
        }

    tr th {
        /*min-width: 150px;*/
    }

    .form-control {
        /*width: 50%;*/
    }

    td {
        justify-content: start;
        display: flex;
    }

    th {
        justify-content: center;
    }

    tr th,
    tr td {
        vertical-align: middle !important;
        border-top: 0px !important;
    }

    .eform-body tr.border {
        border: none !important;
    }

        .eform-body tr.border th,
        .eform-body tr.border td {
            border-top: 0px !important;
            border: 0px !important;
            border-bottom: 1px solid #dee2e6 !important;
        }

    tr.border td {
        padding: 0;
    }

    td input[type='date'],
    td input[type='text'] {
        /*width: 250px !important*/
    }

    tr[data-required="True"] th label::after {
        content: "*";
        color: red;
        margin: 0 5px
    }

    .checkbox {
        margin: 0 !important;
        white-space: nowrap;
    }

    .EmptySpace {
        height: 25px;
    }

    .contanier {
        box-shadow: 0px 0px 20px 4px #888888;
        padding: 25px;
    }

    .alert {
        margin: 0;
        width: 250px !important;
    }

    .btn-primary {
        background-color: var(--main-btn-color);
    }

    h2 {
        color: var(--main-btn-color) !important;
    }

    .table > :not(caption) > * > * {
        border-bottom-width: 0px !important;
    }

    .Space {
        border-bottom: 1px solid #dee2e6;
        margin: 30px 0;
    }
</style>
@*<link href="~/Design/CSS/all.min.css" rel="stylesheet" />
    <link href="~/Design/CSS/bootstrap.min.css" rel="stylesheet" />*@
@{
    var isar = Request.Cookies["lang"]?.Value == "ar";
}
<div class="modal-dialog modal-dialog-eform" role="document">
    <div class="modal-content">
        <div class="modal-header d-flex flex-column " style="padding: 40px 40px 0 40px;">
            <div class="d-flex flex-md-row flex-column align-items-center w-100 justify-content-between ">
                <label class="pt-1 mb-md-2 col-md col-12 px-0" id="saudiArabiTitlr">
                    @(isar?
					"المملكة العربية السعودية":
					"Kingdom of Saudi Arabia")
                </label>
                <div class="pt-1 mb-md-2 col-md col-12 justify-content-center align-items-center d-flex">
                    <img src="~/Design/img/VisionLogo.png" style="width: 158px !important; " />
                </div>
                <div class="pt-1 mb-md-2 text-md-center text-start col-md col-12 px-0 d-flex justify-content-end">
                    <label class="" id="MIMIS">
                        @(isar?
							"وزارة التعليم":
					"Ministry of Education") <br />043
                    </label>
                </div>

            </div>
            <div id="uninadee" style="display:inline-flex;justify-content:space-between;flex-wrap:wrap; flex-direction:row;width:100%">
                <div dir="rtl" style="display: inline-flex; justify-content: flex-start; flex-direction: row; align-items: baseline;">
                    <span class="modal-title " style="direction:rtl" data-id="@Model.ID">اسم الجهة:</span>
                    <span id="Eform-UnitName">الجهة رقم 1</span>
                </div>
                <div dir="ltr" style="display: inline-flex; justify-content: flex-start; flex-direction: row; align-items: baseline;">
                    <span class="modal-title" style="direction:ltr" data-id="@Model.ID">Name of administrative level:</span>
                    <span id="Eform-UnitNameEN">@ViewBag.UnitENName Unit Number 1</span>
                </div>
            </div>

            <div id="EformNameHandelCom" style="display:inline-flex;justify-content:space-between;align-items:center;width:100%">
                <h5 class="modal-title w-100 text-center" data-id="@Model.ID">@Model.Name</h5>
                <h5 class="modal-title w-100 text-center" data-id="@Model.ID">@Model.Name_EN</h5>
                <div style="display: inline-flex; justify-content: flex-end; flex-direction: row; width: 100%; align-items: baseline;">
                    <span>@(isar?"كود النموذج":"Eform Code"): @Model.Code</span>
                </div>
            </div>
        </div>
        <div class="modal-body" style="padding: 40px 40px 0 40px;">
            <div class="row w-100 p-0 m-0">
                <div class="col-12 p-0 my-3">
                    <div class="row m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width:100%;direction:rtl">
                                1.1- البيانات الشخصية الأساسية
                            </label>
                            <label style="width:100%;direction:ltr">1.1- Personal Information </label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100">
                        @foreach (var qty in Model.Question.Where(q => q.T == "E"))
                        {
                            <div class="col-md-6 col-12 d-inline-flex justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN">
                                <label>
                                    @qty.Name <br /> @qty.Name_EN
                                </label>
                                <div class="form-control" style=" margin:0;">
                                    <label data-ref="@qty.Ref" style="white-space: pre-wrap;">  </label>
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="col-12 p-0 my-3">
                    <div class="row m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width:100%;direction:rtl">
                                1.2- البيانات الشخصية الإضافية
                            </label>
                            <label style="width:100%;direction:ltr">1.2- Extra Personal Information </label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100">
                        @foreach (var qty in Model.Question.Where(q => q.T != "E"))
                        {
                            switch (qty.T)
                            {
                                case "I":
                                    <div class="col-md-6 col-12 d-inline-flex justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <label>
                                            @qty.Name <br /> @qty.Name_EN
                                        </label>
                                        <input class="form-control" placeholder="@(isar?qty.Input.PlaceHolder:qty.Input.PlaceholderEN)" type="@(qty.Input.ISNum?"number":"text")" />
                                    </div>
                                    break;
                                case "C":
                                    <div class="col-md-6 col-12 flex-row d-flex align-items-center " data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <div>
                                            @qty.Name <br /> @qty.Name_EN
                                        </div>
                                        <div class="row justify-content-center d-flex">
                                            @foreach (var c in qty.Check)
                                            {
                                                <label class="checkbox col-12">
                                                    <input type="checkbox" data-value="@(c.Name+"-"+c.Name_EN)" value="@c.Name_EN" name="@qty.Name_EN-@qty.ID">
                                                    @(isar?c.Name:c.Name_EN)
                                                </label>
                                            }
                                        </div>
                                    </div>
                                    break;
                                case "R":
                                    <div class="col-md-6 col-12 d-inline-flex" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <label>
                                            @qty.Name <br /> @qty.Name_EN
                                        </label>
                                        <div class="row w-100 flex-row flex-wrap d-inline-flex align-items-center ">
                                            @foreach (var c in qty.Radio)
                                            {
                                                <label class="checkbox col">
                                                    <input type="radio" data-value="@(c.Name+"-"+c.Name_EN)" value="@c.Name_EN" name="@qty.Name_EN-@qty.ID">
                                                    @(isar?c.Name:c.Name_EN)
                                                </label>
                                            }
                                        </div>
                                    </div>
                                    break;
                                case "D":
                                    <div class="col-md-6 col-12 d-inline-flex justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <label>
                                            @qty.Name <br /> @qty.Name_EN
                                        </label>
                                        <input class="form-control" type="date" />
                                    </div>
                                    break;
                                case "S":
                                    <div class="@(qty.Sepa.Empty?"EmptySpace":"Space") col-12">

                                    </div>
                                    break;
                                case "T":
                                    <div class="border col-12">
                                        <h4 style="margin-bottom: 0px; text-align: center; color: var(--main-btn-color);">@qty.Name <br /> @qty.Name_EN</h4>
                                    </div>
                                    break;
                                case "P":
                                    <div class="border" style="text-align:start">
                                        <p style="margin-bottom: 0px;width:100%; text-align: start; color: var(--main-btn-color);direction:rtl">
                                            @qty.Para.Name
                                        </p>
                                        <p style="margin-bottom: 0px;width:100%; text-align: start; color: var(--main-btn-color);direction:ltr">
                                            @qty.Para.Name_En
                                        </p>
                                    </div>
                                    break;
                                default:
                                    break;
                            }
                        }

                    </div>
                </div>
                <div class="col-12 p-0 my-3">
                    <div class="row m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width:100%;direction:rtl">
                                2- بيانات الطلب
                            </label>
                            <label style="width:100%;direction:ltr">2- Request Information </label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width:100%;direction:rtl">
                                نوع الطلب | Request Type
                                <label style="border:0;margin:0 5px" id="eform-reqType"></label>
                            </label>
                            <label style="width: 100%; direction: rtl">
                                نوع الخدمة | Service Type
                                <label style="border:0;margin:0 5px" id="eform-ServType"></label>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-12 my-3">
                    <div class="row m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center">
                            <label style="width:100%;direction:rtl">
                                3- الاعتمادات
                            </label>
                            <label style="width:100%;direction:ltr">3- Approvals</label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100">

                    </div>
                </div>
                @{
                    var count = 1;
                }
                @foreach (var i in Model.Eform_Approval)
                {
                    <div class="col-12 p-0 my-3">
                        <div class="row m-0 w-100">
                            <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                                <label style="width:100%;direction:rtl">
                                    @(count).3 @i.AR
                                </label>
                                <label style="width:100%;direction:ltr">3.@count @i.EN</label>
                            </div>
                        </div>
                        <div class="row border-section m-0 w-100" style="height:40px">

                        </div>
                    </div>
                    count++;
                }
            </div>

        </div>
        <div class="modal-footer" style="display: flex; justify-content: center; flex-direction: column;">
            <p class="row text-center" style="color:red">
                @(
                isar?

                @"برجاء التأكد من كل البيانات قبل الضغط علي حفظ.":

                @"Please make sure of all the data before pressing Save."
                )
            </p>
            <div>
                <button type="button" class="btn btn-primary w-40 mx-3 saveeform" style="background-color: var(--main-btn-color); width: 22vw; ">@(isar?"حفظ":"Save")</button>
                <button type="button" class="btn btn-secondary w-40" data-bs-dismiss="modal">@(isar?"اغلاق":"Close")</button>
            </div>
        </div>
    </div>
</div>

