@model ICollection<IAUAdmin.DTO.Entity.SubServicesDTO>
@using System.Configuration;
@{
    var selectedlevel = ViewBag.SelectedLevel as IAUAdmin.DTO.Entity.MainServiceDTO;

    ViewBag.Title = "Statistics | Report of Main Service and Sub service and E-forms" + (selectedlevel?.Main_Services_Name_EN == null ? "" : $" | '{selectedlevel?.Main_Services_Name_EN}'");
    ViewBag.arTitle = "التقارير والاحصائيات | تقرير عرض الخدمة الرئيسية والفرعية والنماذج الالكترونية" + (selectedlevel?.Main_Services_Name_AR == null ? "" : $" | '{selectedlevel?.Main_Services_Name_AR}'");

    ViewBag.pTitle = "Statistics";
    ViewBag.arpageTitle = "التقارير والاحصائيات";

    ViewBag.pTitle = "Report of Main Service and Sub service and E-forms";
    ViewBag.arpTitle = "تقرير عرض الخدمة الرئيسية والفرعية والنماذج الالكترونية";

    Layout = "~/Views/Shared/_Layout.cshtml";
    var isar = Request.Cookies["lang"].Value == "ar";
}
<style>
    .t-start {
        text-align: start;
    }

    .control-label::after {
        content: ":"
    }
</style>
<!-- select2 css -->
<link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

<!-- dropzone css -->
<link href="~/assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />


<!-- DataTables -->
<link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
