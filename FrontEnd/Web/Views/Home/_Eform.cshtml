@model IAU.DTO.Entity.E_FormsDTO
<style>
    :root {
        --main-btn-color: #0a1332 !important;
    }

    @@media(max-width:770px) {

        tr {
            display: flex;
            flex-direction: column;
        }
    }

    td {
        width: 100%;
    }

        td div {
            margin: 0 20px;
        }

    tr th {
        min-width: 150px;
    }

    td {
        justify-content: start;
        display: flex;
    }

    th {
        justify-content: center;
    }

    tr th,
    tr td {
        vertical-align: middle !important;
        border-top: 0px !important;
    }

    tr.border {
        border: none !important;
    }

        tr.border th,
        tr.border td {
            border-top: 0px !important;
            border: 0px !important;
            border-bottom: 1px solid #dee2e6 !important;
        }

        tr.border td {
            padding: 0;
        }

    td input[type='date'],
    td input[type='text'] {
        /*width: 250px !important*/
    }
    tr[data-required="True"] th label::after{
        content:"*";
        color:red;
        margin:0 5px
    }
    .checkbox {
        margin: 2px 15px;
    }

    .EmptySpace {
        height: 25px;
    }

    .contanier {
        box-shadow: 0px 0px 20px 4px #888888;
        padding: 25px;
    }

    .alert {
        margin: 0;
        width: 250px !important;
    }

    .btn-primary {
        background-color: var(--main-btn-color);
    }

    h2 {
        color: var(--main-btn-color) !important;
    }

    .table > :not(caption) > * > * {
        border-bottom-width: 0px !important;
    }

    .Space {
        border-bottom: 1px solid #dee2e6;
        margin: 30px 0;
    }
</style>
