<!DOCTYPE html>
<html lang="en">

<head>
	@{
		if (Request.Cookies["lang"].Value == "ar")
		{
			<style>
				body {
					font-family: 'DroidArabicKufiRegular' !important;
					font-weight: bolder !important;
				}
			</style>
		}
		else
		{
			<style>
				body {
					font-family: 'Frutiger LT Arabic 55 Roman' !important;
					font-weight: bolder !important;
				}
			</style>
		}
	}
	<style>

		.en-font, td.dataTables_empty, button.buttons-html5, .TH-en, div#datatable-buttons_wrapper div.row:nth-of-type(3), div#datatable-buttons_wrapper div.row:nth-of-type(3) {
			font-family: 'Frutiger LT Arabic 55 Roman' !important;
		}

		input.ar-font, select.ar-font {
			text-align: right !important;
			direction: rtl !important;
		}

		input.en-font, select.en-font {
			text-align: left !important;
			direction: ltr !important;
		}
		td.TH-ar{
			direction:rtl!important;
		}
		td.TH-en{
			direction:ltr!important;
		}
		.ar-font, .TH-ar {
			font-family: 'DroidArabicKufiRegular' !important;
		}

		/* The container <div> - needed to position the dropdown content */
		.dropdown {
			position: relative;
			display: inline-block;
		}

		/* Dropdown Content (Hidden by Default) */
		.dropdown-content {
			display: none;
			position: absolute;
			min-width: 562px;
			left: -35px;
			white-space: pre-line;
			z-index: 99;
		}

			.dropdown-content div {
				box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
				background-color: #f1f1f1;
				padding: 10px;
				border-radius: 25px;
			}
		/* Show the dropdown menu on hover */
		.dropdown:hover .dropdown-content {
			display: block;
		}

		/* Change the background color of the dropdown button when the dropdown content is shown */
		.dropdown:hover .dropbtn {
			background-color: #3e8e41;
		}

		li.paginate_button.page-item:not(.next):not(.previous) a {
			background-color: grey !important;
			border: none
		}

		th, title, .page-title-right, .breadcrumb-item a, .card-title-desc, .control-label, .card-title {
			color: #0a1332
		}
	</style>
	@Html.Partial("~/Views/Shared/_title_meta.cshtml")
	@RenderSection("styles", false)
	@Html.Partial("~/Views/Shared/_head_css.cshtml")
</head>

<body data-sidebar="dark">
	<!-- Begin page -->
	<div id="layout-wrapper">
		<div class="loadinger" id="LoadingDiv">
			@*<div style="width:100vw;height:100vh">*@
			<img src='~/assets/images/loading.gif' />
			@*<p>Loading Please Be Patient</p>*@
			@*</div>*@
		</div>
		@Html.Partial("~/Views/Shared/_topbar.cshtml")
		@Html.Partial("~/Views/Shared/_sidebar.cshtml")

		<!-- ============================================================== -->
		<!-- Start right Content here -->
		<!-- ============================================================== -->
		<div class="main-content">
			<div class="page-content">
				<div class="container-fluid">
					@Html.Partial("~/Views/Shared/_page_title.cshtml")

					@RenderBody()
				</div> <!-- container-fluid -->
			</div>
			<!-- End Page-content -->

			@Html.Partial("~/Views/Shared/_footer.cshtml")
		</div>
		<!-- end main content-->

	</div>

	@RenderSection("externalhtml", required: false)

	<!-- END layout-wrapper -->
	@Html.Partial("~/Views/Shared/_right_sidebar.cshtml")

	@*@Html.Partial("~/Views/Shared/_vendor_scripts.cshtml")*@

	@RenderSection("scripts", required: false)
	<script>
		$(document).ready(w => {
			var data = document.querySelectorAll('#datatable-buttons_filter label input , #searchTXT')
			if (data != null && data.length != 0)
				data.forEach(e => {
					e.setAttribute("placeholder",'@(Request.Cookies["lang"].Value == "ar"?"بحث" :"Search")')
				})
			$('.btn.btn-circle:has(i.fas.fa-plus-circle)').addClass("createNew-link")
			$('.HeaderOfPage .card-title-desc').attr('key','').text("");
		})
	</script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/howler/2.1.2/howler.core.min.js">
	</script>
</body>
</html>
