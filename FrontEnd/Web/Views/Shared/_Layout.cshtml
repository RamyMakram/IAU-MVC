<!DOCTYPE html>
<html>

<head>
    @{
        var design = TempData.Peek("StyleData") as Web.Models.DomainStyle;
    }

    <meta charset="utf-8" />
    <title>@design.Title -</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/Design/CSS/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Design/CSS/all.min.css" />
    <link rel="stylesheet" href="~/Design/CSS/style.css" />
    <link rel="icon" href="@design.Icon" />
    <meta name="description" content="@design.MetaDesc">
    <meta name="keywords" content="@design.MetaKeyword">
    @{
        ViewBag.CookieLang = ViewBag.CookieLang ?? "ar";
    }
    @if (ViewBag.CookieLang == "ar")
    {
        <style>
            .containt #Service_Type_Id .stick p:nth-of-type(1), .containt #Service_Type_Id .stick p:nth-of-type(2), .containt #Request_Type_Id .stick p:nth-of-type(1) {
                letter-spacing: normal !important;
            }

            a.nav-link {
                font-weight: bold;
                font-size: 19px;
            }

            .mainservice p, .requesttype p {
                font-size: 18px !important;
                font-weight: bold !important;
            }
        </style>
        <link href="~/Design/CSS/arStyle.css" rel="stylesheet" />
    }
    @Html.Partial("_MultiTenantDesignPartial")
</head>

<body class="@ViewBag.CookieLang">
    <nav class="navbar navbar-expand-xl">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
