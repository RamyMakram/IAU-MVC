    var selectedlevel = ViewBag.SelectedLevel as IAUAdmin.DTO.Entity.ServiceTypeDTO;

    ViewBag.Title = "Statistics | Services report according to service type" + (selectedlevel?.Service_Type_Name_EN == null ? "" : $" | '{selectedlevel?.Service_Type_Name_EN}'");
    ViewBag.arTitle = "التقارير والاحصائيات | تقرير الخدمات وفقا لنوع الخدمة" + (selectedlevel?.Service_Type_Name_AR == null ? "" : $" | '{selectedlevel?.Service_Type_Name_AR}'");

    ViewBag.pTitle = "Statistics";
    ViewBag.arpageTitle = "التقارير والاحصائيات";

    ViewBag.pTitle = "Services report according to service type";
    ViewBag.arpTitle = "تقرير الخدمات وفقا لنوع الخدمة";

    Layout = "~/Views/Shared/_Layout.cshtml";
    var ShowDelete = (TempData["Permissions"] as string[]).Contains("Delete Item");
    var isar = Request.Cookies["lang"].Value == "ar";
}
