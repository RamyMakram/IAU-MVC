        width: 81%;
        padding: 0 9px;
    }


    [data-id].col-md-6 > div > label {
        max-width: 194px;
        width: 194px !important;
        margin: 0 10px;
    }

    [data-id]:not(.col-md-6) > div > label {
        margin: 10px;
    }

    [data-id]:not(.col-md-6) > div div {
        margin: 0 25px;
    }

    .form-control {
        max-height: 37px !important;
        width: 100%;
        color: white;
        background: #283758;
    }

    @@media(max-width:1200px) and (min-width:771px) {
        [data-id] {
            flex-direction: column !important;
        }

        [data-id^="C"] div div:nth-of-type(2), [data-id^="R"] div div:nth-of-type(2) {
            width: 100% !important;
        }

        [data-id].col-md-6 > div > label {
            max-width: unset;
            width: 100% !important;
        }

        #uninadee {
            display: flex !important;
            flex-direction: column !important;
        }
    }

    @@media(max-width:770px) {

        .modal-body, .modal-header {
            padding: 10px !important;
        }

        #EformNameHandelCom {
            display: flex !important;
            flex-direction: column !important;
        }

            #EformNameHandelCom div {
                justify-content: center !important;
            }

        #uninadee div {
            display: flex !important;
            flex-direction: column !important;
        }

        #saudiArabiTitlr, #MIMIS {
