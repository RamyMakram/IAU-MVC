@model IAUAdmin.DTO.Entity.JobDTO
@{
	ViewBag.Title = "Edit Job";
	ViewBag.pTitle = "Edit Job";
	ViewBag.pageTitle = "Jobs";
	ViewBag.arTitle =	  "تعديل وظيفة";
	ViewBag.arpageTitle = "تعديل وظيفة";
	ViewBag.arpTitle = "الوظائف";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- select2 css -->
<link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

<!-- dropzone css -->
<link href="~/assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />


<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">
				<div class="table-responsive">
					<table class="table mb-0 table-bordered">
						<tbody>
							<tr>
								<th for="Name_AR" key="t-name">Job Name</th>
								<td class="ar-font">@Model.User_Permissions_Type_Name_AR</td>
							</tr>
							<tr>
								<th for="Name_EN" key="t-enname">Job English Name</th>
								<td class="en-font">@Model.User_Permissions_Type_Name_EN</td>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>


		<div class="card">
			<div class="card-body">

				<h4 class="card-title" key="t-jobPrivilges">Privileges</h4>

				<div class="row">
					@foreach (var i in Model.Permissions)
					{

						if (i.Sub.Count(q => q.Active.Value) != 0 || i.Details.Count(q => q.Active.Value) != 0)
						{
							<div class="col-sm-6">
								<div class="form-group">
									<label style="font-weight:bolder">@Html.DisplayName(i.Name.ToString())</label>
									<div style="margin:0 10px">
										@{
											if (i.Sub.Count != 0)
											{
												foreach (var c in i.Sub)
												{
													if (c.Active == true)
													{
														<div class="custom-control custom-switch mb-3" dir="ltr">
															<input type="checkbox" class="custom-control-input" disabled id=@("customSwitch" + c.ID) checked=@c.Active>
															<label class="custom-control-label" for=@("customSwitch" + c.ID)>@c.Name</label>
														</div>
													}
												}
											}
											if (i.Details.Count != 0)
											{
												foreach (var c in i.Details)
												{
													if (c.Active == true)
													{
														<div class="custom-control custom-switch mb-3" dir="ltr">
															<input type="checkbox" class="custom-control-input" disabled id=@("customSwitch" + c.ID) checked=@c.Active>
															<label class="custom-control-label" for=@("customSwitch" + c.ID)>@c.Name</label>
														</div>
													}
												}
											}
										}
									</div>
								</div>
							</div>
						}

					}
				</div>

			</div>
		</div>
		<div class="mt-5">
			@Html.ActionLink("Edit", "Edit", new { Id = Model.User_Permissions_Type_ID }, new { @class = "btn btn-primary", @key = "t-edit" })
			@*@Html.ActionLink("Deactive", "deactive", new { Id = 1 }, new { @class = "btn btn-danger", @key = "t-deactive" })*@
		</div>
	</div>
</div>
<!-- end row -->
