@model IAU.DTO.Entity.E_FormsDTO
<style>
    :root {
        --main-btn-color: #0a1332 !important;
    }

    .section-eform > div:nth-of-type(1) label {
        font-size: 17px;
    }

    .eform-qty-title {
        margin-bottom: 10px;
    }

    [data-id] div:nth-of-type(1) label label:nth-of-type(1) {
        font-size: 15px
    }

    label.en-qty-head {
        width: 100%;
    }

    label .ar-qty-head {
        text-align: start
    }

    input[type="checkbox"], input[type="radio"] {
        margin: 0 9px;
    }

    #saudiArabiTitlr, #MIMIS {
        margin-top: 36px;
    }

    .ar-qty-head {
        font-weight: bolder;
    }

    .eform-section label {
        padding: 10px;
        height: 100%;
        border: 1px solid #f4f4f4
    }

    .border-section {
        border: 1px solid #f4f4f4
    }

    .modal-dialog-eform {
        width: 68vw !important;
        max-width: unset !important;
        font-size: 13px;
    }

    [data-id] {
        margin: 0px 0;
        align-items: center;
    }

    [data-id^="C"] div div:nth-of-type(1), [data-id^="R"] div div:nth-of-type(1) {
        max-width: 250px;
        width: 250px;
    }

    [data-id^="C"] div div:nth-of-type(2), [data-id^="R"] div div:nth-of-type(2) {
        width: 81%;
        padding: 0 9px;
    }


    [data-id].col-md-6 > div > label {
        max-width: 194px;
        width: 194px !important;
        margin: 0 10px;
    }

    [data-id]:not(.col-md-6) > div > label {
        margin: 10px;
    }

    [data-id]:not(.col-md-6) > div div {
        margin: 0 25px;
    }

    .form-control {
        max-height: 37px !important;
        width: 100%;
        background-color: transparent !important;
        color: black !important;
    }

    @@media(max-width:1200px) and (min-width:771px) {
        [data-id] {
            flex-direction: column !important;
        }

        [data-id^="C"] div div:nth-of-type(2), [data-id^="R"] div div:nth-of-type(2) {
            width: 100% !important;
        }

        [data-id].col-md-6 > div > label {
            max-width: unset;
            width: 100% !important;
        }

        #uninadee {
            display: flex !important;
            flex-direction: column !important;
        }
    }

    @@media(max-width:770px) {

        .modal-body, .modal-header {
            padding: 10px !important;
        }

        #EformNameHandelCom {
            display: flex !important;
            flex-direction: column !important;
        }

            #EformNameHandelCom div {
                justify-content: center !important;
            }

        #uninadee div {
            display: flex !important;
            flex-direction: column !important;
        }

        #saudiArabiTitlr, #MIMIS {
            margin-top: 0px;
            text-align: center !important;
            justify-content: center !important;
            align-items: center;
            display: flex !important;
        }

        .eform-body tr {
            display: flex;
            flex-direction: column;
        }

        .form-control {
            width: 100%;
        }

        .modal-dialog-eform {
            max-width: 56vw !important;
            width: 100%
        }

            .modal-dialog-eform > .modal-content > .modal-header {
                display: none
            }

        .modal-dialog-eform {
            max-width: 89vw !important;
            width: 100% !important;
        }
    }

    .modal-dialog-eform {
        width: 68vw !important;
        max-width: unset !important;
    }

    td {
        width: 100%;
    }

        td div {
            margin: 0 20px;
        }

    tr th {
        /*min-width: 150px;*/
    }

    .form-control {
        /*width: 50%;*/
    }

    td {
        justify-content: start;
        display: flex;
    }

    th {
        justify-content: center;
    }

    tr th,
    tr td {
        vertical-align: middle !important;
        border-top: 0px !important;
    }

    .eform-body tr.border {
        border: none !important;
    }

        .eform-body tr.border th,
        .eform-body tr.border td {
            border-top: 0px !important;
            border: 0px !important;
            border-bottom: 1px solid #dee2e6 !important;
        }

    tr.border td {
        padding: 0;
    }

    td input[type='date'],
    td input[type='text'] {
        /*width: 250px !important*/
    }

    tr[data-required="True"] th label::after {
        content: "*";
        color: red;
        margin: 0 5px
    }

    .checkbox {
        margin: 0 !important;
        /*white-space: nowrap;*/
    }

    .EmptySpace {
        height: 25px;
    }

    .contanier {
        box-shadow: 0px 0px 20px 4px #888888;
        padding: 25px;
    }

    .alert {
        margin: 0;
        width: 250px !important;
    }

    .btn-primary {
        background-color: var(--main-btn-color);
    }

    h2 {
        color: var(--main-btn-color) !important;
    }

    .table > :not(caption) > * > * {
        border-bottom-width: 0px !important;
    }

    .Space {
        border-bottom: 1px solid #dee2e6;
        margin: 30px 0;
    }
</style>
@*<link href="~/Design/CSS/all.min.css" rel="stylesheet" />
    <link href="~/Design/CSS/bootstrap.min.css" rel="stylesheet" />*@
@{
    var isar = Request.Cookies["lang"]?.Value == "ar";
}
<div class="modal-dialog modal-dialog-eform" role="document">
    <div class="modal-content">
        <div class="modal-header d-flex flex-column border-0" style="padding: 40px 40px 0 40px;">
            <div class="d-flex flex-md-row flex-column align-items-center w-100 justify-content-between ">
                <label class="pt-1 mb-md-2 col-md col-12 px-0" id="saudiArabiTitlr">

                    المملكة العربية السعودية <br />
                    Kingdom of Saudi Arabia
                </label>
                <div class="pt-1 mb-md-2 col-md col-12 justify-content-center align-items-center d-flex">
                    <img src="~/Design/img/VisionLogo.png" style="width: 158px !important; " />
                </div>
                <div id="MIMIS" class="pt-1 mb-md-2 text-md-center text-start col-md col-12 px-0 d-flex justify-content-end">
                    <label class="">

                        وزارة التعليم<br />
                        Ministry of Education<br />043
                    </label>
                </div>

            </div>
            <hr class="w-100" />
            <div id="uninadee" style="padding: 0; display: inline-flex; font-size: 16px; justify-content: space-between;" class="flex-md-row flex-column w-100">
                <div dir="rtl" style="display: flex;" class="justify-content-md-end justify-content-center w-100">
                    <span class="modal-title " data-eformid="@Model.ID" style="direction:rtl;font-weight:bolder" id="Eform-UnitName">@ViewBag.UnitARName</span>
                </div>
                <div dir="ltr" style=" padding: 0 17px; display: flex;" class="justify-content-md-end justify-content-center w-100">
                    <span id="Eform-UnitNameEN" style="direction: ltr; font-weight: bolder">@ViewBag.UnitENName</span>
                </div>
            </div>
            <hr class="w-100" />

            <div id="EformNameHandelCom" style="padding:0;display:inline-flex;justify-content:space-between;align-items:center;width:100%;margin-top:15px;">
                <h6 class="modal-title w-100" style="text-align:right;direction:rtl">
                    اسم النموذج:
                    <br />
                    @Model.Name
                </h6>
                <h6 class="modal-title w-100" style="text-align:left;direction:ltr">
                    E-Form Name:
                    <br />
                    @Model.Name_EN
                </h6>
                <h6 class="modal-title w-100" style="text-align:center;">
                    كود النموذج | E-form Code
                    <br />
                    <label style="direction:ltr">@ViewBag.EfCode</label>
                </h6>
            </div>
            <hr class="w-100" />
        </div>
        <div class="modal-body" style="padding: 0px 40px 0 40px;">
            <div class="row w-100 p-0 m-0">
                <div class="col-12 p-0 my-3  section-eform">
                    <div class="row m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width: 100%; direction: rtl; font-weight: bolder; text-align:end">
                                1- البيانات الشخصية
                            </label>
                            <label style="width: 100%; direction: ltr; font-weight: bolder; text-align: end">1- Personal Information </label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100" style="padding-top: 15px;">
                        @foreach (var qty in Model.Question)
                        {
                            switch (qty.T)
                            {
                                case "E":
                                    <div class="col-md-6 col-12 justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN">
                                        <div class="d-inline-flex flex-row w-100 align-items-center">
                                            <label>
                                                <label class="ar-qty-head">@qty.Name</label> <br /> <label class="en-qty-head">@qty.Name_EN</label>
                                            </label>
                                            <div class="form-control" style=" margin:0;">
                                                <label data-ref="@qty.Ref" style="white-space: pre-wrap;color:black!important"> </label>
                                            </div>
                                        </div>
                                        <div class="row w-100 mt-3 m-0">
                                            <hr />
                                        </div>
                                    </div>
                                    break;
                                case "I":
                                    <div class="col-md-6 col-12 justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <div class="d-inline-flex flex-row w-100 align-items-center">
                                            <label>
                                                <label class="ar-qty-head">@qty.Name</label> <br /><label class="en-qty-head"> @qty.Name_EN</label>
                                            </label>
                                            <input class="form-control" placeholder="@(isar?qty.Input.PlaceHolder:qty.Input.PlaceholderEN)" type="@(qty.Input.ISNum?"number":"text")" />
                                        </div>
                                        <div class="row w-100 mt-3 m-0">
                                            <hr />
                                        </div>
                                    </div>
                                    break;
                                case "C":
                                    <div class="col-md-6 col-12 align-items-center " data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <div class="d-inline-flex flex-row w-100 align-items-center">
                                            <div>
                                                <label class="ar-qty-head">@qty.Name</label> <br /> <label class="en-qty-head">@qty.Name_EN</label>
                                            </div>
                                            <div class="row justify-content-start d-flex w-100">
                                                @foreach (var c in qty.Check)
                                                {
                                                    <div class="checkbox col-12 d-inline-flex  align-items-center w-100 p-0">
                                                        <input type="checkbox" data-value="@(c.Name+"-"+c.Name_EN)" value="@c.Name_EN" name="@qty.Name_EN-@qty.ID" />
                                                        <p class="m-0"><span class="ar-qty-head">@c.Name</span> <br /> <span class="en-qty-head">@c.Name_EN</span></p>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="row w-100 mt-3 m-0">
                                            <hr />
                                        </div>
                                    </div>
                                    break;
                                case "R":
                                    <div class="col-md-6 col-12 align-items-center " data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <div class="d-inline-flex flex-row w-100 align-items-center">
                                            <div>
                                                <label class="ar-qty-head">@qty.Name</label> <br /> <label class="en-qty-head">@qty.Name_EN</label>
                                            </div>
                                            <div class="row justify-content-start d-flex w-100">
                                                @foreach (var c in qty.Radio)
                                                {
                                                    <div class="checkbox col-12 d-inline-flex  align-items-center w-100 p-0">
                                                        <input type="radio" data-value="@(c.Name+"-"+c.Name_EN)" value="@c.Name_EN" name="@qty.Name_EN-@qty.ID" />
                                                        <p class="m-0"><span class="ar-qty-head">@c.Name</span> <br /> <span class="en-qty-head">@c.Name_EN</span></p>
                                                    </div>
                                                }
                                            </div>
                                        </div>
                                        <div class="row justify-content-center d-flex">
                                            <hr />
                                        </div>
                                    </div>
                                    break;
                                case "D":
                                    <div class="col-md-6 col-12 justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <div class="d-inline-flex flex-row w-100 align-items-center">
                                            <label>
                                                <label class="ar-qty-head">@qty.Name</label> <br /> <label class="en-qty-head">@qty.Name_EN</label>
                                            </label>
                                            <input class="form-control" type="date" />
                                        </div>
                                        <div class="row w-100 mt-3 m-0">
                                            <hr />
                                        </div>
                                    </div>
                                    break;
                                case "S":
                                    <div class="@(qty.Sepa.Empty?"EmptySpace":"Space") col-12">

                                    </div>
                                    break;
                                case "T":
                                    <div class="border col-12 eform-qty-title">
                                        <div class="d-inline-flex w-100 p-2 flex-md-row flex-column align-items-baseline">
                                            <div class="w-100"><h4 style="text-align:end;direction:rtl;margin-bottom: 0px;color: var(--main-btn-color);">@qty.Name | </h4></div>
                                            <div class="w-100">
                                                <h4 style="text-align: end;direction: ltr; margin-bottom: 0px; color: var(--main-btn-color);">@qty.Name_EN</h4>
                                            </div>
                                        </div>
                                    </div>
                                    break;
                                case "P":
                                    <div class="border col-12" style="text-align:start">
                                        <p style="margin-bottom: 0px;width:100%; text-align: start; color: var(--main-btn-color);direction:rtl">
                                            <label class="ar-qty-head">@qty.Para.Name</label>
                                        </p>
                                        <p style="margin-bottom: 0px;width:100%; text-align: start; color: var(--main-btn-color);direction:ltr">
                                            <label class="en-qty-head">@qty.Para.Name_En</label>
                                        </p>
                                    </div>
                                    break;
                                default:
                                    break;
                            }

                        }


                    </div>
                </div>
                <div class="col-12 p-0 my-3 section-eform">
                    <div class="row m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width: 100%; direction: rtl; font-weight: bolder; text-align: end">
                                2- بيانات الطلب
                            </label>
                            <label style="width: 100%; direction: ltr; font-weight: bolder; text-align: end">2- Request Information </label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width:100%;direction:rtl">
                                <span style=" font-weight: bolder;">
                                    نوع الطلب | Request Type
                                </span>
                                <label style="border:0;margin:0 5px" id="eform-reqType"></label>
                            </label>
                            <label style="width: 100%; direction: rtl">
                                <span style=" font-weight: bolder;">  نوع الخدمة | Service Type</span>
                                <label style="border:0;margin:0 5px" id="eform-ServType"></label>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-12 p-0 my-3 section-eform">
                    <div class="row m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width: 100%; direction: rtl; font-weight: bolder; text-align: end; ">
                                3- الاعتمادات
                            </label>
                            <label style="width: 100%; direction: ltr; font-weight: bolder;text-align: end;">3- Approvals</label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100">
                        <div class="col-12 p-0">
                            <div class="row m-0 w-100">
                                <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section" style=" font-weight: bolder;">
                                    <label style="width: 100%; direction: rtl; text-align: start; ">
                                        1.3 @Model.Eform_Approval.Units_Name_AR
                                    </label>
                                    <label style="width: 100%; direction: ltr; text-align: start;">3.1 @Model.Eform_Approval.Units_Name_EN</label>
                                </div>
                            </div>
                            <div class="row border-section m-0 w-100" style="height:40px">

                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>
        <div class="modal-footer" style="display: flex; justify-content: center; flex-direction: column;">
            <p class="row text-center" style="color:red">
                @(
                isar?

                @"برجاء التأكد من كل البيانات قبل الضغط علي حفظ.":

                @"Please make sure of all the data before pressing Save."
                )
            </p>
            <div>
                <button type="button" class="btn btn-primary w-40 mx-3 saveeform" style="background-color: var(--main-btn-color); width: 22vw; ">@(isar?"حفظ":"Save")</button>
                <button type="button" class="btn btn-secondary w-40" data-bs-dismiss="modal">@(isar?"اغلاق":"Close")</button>
            </div>
        </div>
    </div>
</div>

