<!-- Sweet Alerts js -->
<script src="~/assets/libs/sweetalert2/sweetalert2.min.js"></script>

<script src="~/assets/js/app.js"></script>

@if (ShowDelete)
{

    <script>
		function Delete(id) {
			event.stopPropagation()
		event.stopImmediatePropagation()
		Swal.fire({
			title:"@( Request.Cookies["lang"].Value == "ar" ? "هل انت متاكد من حذف هذا النوع؟" : "Are you sure To Delete this Type?")",
			text: "@(Request.Cookies["lang"].Value == "ar" ? "لن تستطيع ارجاع ذلك بعد اتمام العملية!" : "You won't be able to revert this!")",
			icon: "warning",
			showCancelButton: true,
			focusConfirm: false,
			confirmButtonColor: "#34c38f",
			cancelButtonColor: "#f46a6a",
			confirmButtonText: "@(Request.Cookies["lang"].Value == "ar" ? "موافق , احذف النوع" : "Yes, Delete it!")",
			cancelButtonText: "@(Request.Cookies["lang"].Value == "ar" ? "الغاء العملية" : "Cancel Process")",
		}).then(function (result) {
			if (result.value) {
				$.ajax({
					url: '/ServiceTypes/Delete?id=' + id,method: "POST",  success: function (res) {
						if (res["success"] == true)
							location.href = location.href;
						else {
							Swal.fire({
								  icon: 'error',
								  title: "@(Request.Cookies["lang"].Value == "ar" ? "فشل الحذف" : "Delete failed")",
								  text: "@(Request.Cookies["lang"].Value == "ar" ? "فشل الحذف . بسبب ان هناك بيانات معتمده علي هذا النوع" : "Delete failed.Because there are data depended on this Type")",
								  confirmButtonText:'@(Request.Cookies["lang"].Value == "ar" ? "حسنا" : "Okay")',
								})
						}
				}
			})
			}
		});
	}
    </script>
}



<div id="ModalViewDiv-removed">

</div>
<script>
    function LoadRemoved() {
        $.ajax({
            url: '/ServiceTypes/AllDel', method: "GET", success: function (res) {
                setTimeout(function () {
                    document.getElementById('LoadingDiv').style.display = 'none';
                }, 1000)
                $('#ModalViewDiv-removed').html(res)
                $('#DeletedItemsModal').modal('show')
            }
        })
    }
</script>