@model IAUAdmin.DTO.Entity.UserDTO
@{
	ViewBag.Title = "Create User";
	ViewBag.pTitle = "Create User";
	ViewBag.pageTitle = "Users";
	ViewBag.arTitle = "اضافة مستخدم";
	ViewBag.arpTitle = "اضافة مستخدم";
	ViewBag.arpageTitle = "المستخدمين";
	Layout = "~/Views/Shared/_Layout.cshtml";
}



<!-- select2 css -->
<link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

<!-- dropzone css -->
<link href="~/assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
<style>
	span.select2 {
		width: 100% !important
	}

	label.control-label::after {
		content: ":";
	}

	label.control-label {
		font-weight: bold;
	}

	span.select2-selection.select2-selection--single {
		height: 36px !important;
	}

	.select2-selection__rendered, .select2-selection__arrow {
		margin-top: 3px;
		font-weight:normal;
	}
</style>
<div class="row">
	<div class="col-12">
		<div class="card">
			<div class="card-body">

				<h4 key="t-basicInfo" class="card-title">Basic Information</h4>
				<p key="t-fillrequired" class="card-title-desc">Fill all information below</p>

				@using (Html.BeginForm("Create", "User"))
				{
					<div class="row">
						<div class="col-sm-6">
							<div class="form-group">
								<label class="control-label" key="t-name" for="name">Name</label>
								@Html.TextBoxFor(q => q.User_Name, new { @class = "form-control ar-font", @name = "name", @id = "name" })
							</div>

							<div class="form-group">
								<label class="control-label" key="t-email" for="email">Email</label>
								@Html.TextBoxFor(q => q.User_Email, new { @class = "form-control en-font", @name = "email", @id = "email", @type = "email" })
							</div>
							<div class="form-group">
								<label class="control-label" key="t-job">Job</label>
								@Html.DropDownListFor(q => q.Job_ID, ViewBag.Jobs as SelectList, new { @class = "form-control select2" })
							</div>
						</div>

						<div class="col-sm-6">
							<div class="form-group">
								<label class="control-label" key="t-mobile" for="mobile">Mobile</label>
								@Html.TextBoxFor(q => q.User_Mobile, new { @class = "form-control en-font", @name = "mobile", @id = "mobile" })
							</div>
							<div class="form-group">
								<label class="control-label" key="t-password" for="pass">Password</label>
								@Html.TextBoxFor(q => q.User_Password, new { @class = "form-control en-font", @name = "pass", @id = "pass" })
							</div>
							<div class="form-group">
								<label class="control-label" key="t-units-short">Job</label>
								@Html.DropDownListFor(q => q.UnitID, ViewBag.Units as SelectList, new { @class = "form-control select2" })
							</div>
						</div>
					</div>
					<button type="submit" key="t-save" class="btn btn-primary mr-1 waves-effect waves-light">Save Changes</button>
					@Html.ActionLink("Cancel", "Home", null, new { @type = "reset", @key = "t-cancel", @class = "btn btn-secondary waves-effect" })
				}

			</div>
		</div>

	</div>
</div>
<!-- end row -->
<!-- JAVASCRIPT -->
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>
<script src="~/assets/js/lang/jquery.multiLanguage.js"></script>

<!-- select 2 plugin -->
<script src="~/assets/libs/select2/js/select2.min.js"></script>

<!-- dropzone plugin -->
<script src="~/assets/libs/dropzone/min/dropzone.min.js"></script>

<!-- init js -->
<script src="~/assets/js/pages/ecommerce-select2.init.js"></script>

<!-- App js -->
<script src="~/assets/js/app.js"></script>
