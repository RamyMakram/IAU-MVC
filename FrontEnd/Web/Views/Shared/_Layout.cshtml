                        <button><a href="/Contactus" style="text-decoration:none;color:white">@(ViewBag.CookieLang == "ar" ? "اتصل بنا" : "Contact")</a></button>
                        @Html.Partial("~/Views/Shared/_Language.cshtml")
                    </div>
                    <img src="~/Design/img/VisionLogo2.png">
                </div>
            </div>
