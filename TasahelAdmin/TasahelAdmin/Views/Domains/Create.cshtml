@using TasahelAdmin.Models.Enum
@model TasahelAdmin.Models.VM.DomainCreateVM

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    legend{
        color:purple;
        font-weight:bolder;
        padding: 30px 0
