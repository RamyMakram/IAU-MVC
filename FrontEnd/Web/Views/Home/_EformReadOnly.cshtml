<div class="modal-dialog modal-dialog-readonly-eform " role="document">
    <div class="modal-content">
        <div class="modal-header d-flex flex-column border-0" style="padding: 40px 40px 0 40px;">
            <div class="d-flex flex-md-row flex-column align-items-center w-100 justify-content-between ">
                <label class="pt-1 mb-md-2 col-md col-12 px-0" id="saudiArabiTitlr">

                    المملكة العربية السعودية <br />
                    Kingdom of Saudi Arabia
                </label>
                <div class="pt-1 mb-md-2 col-md col-12 justify-content-center align-items-center d-flex">
                    <img src="~/Design/img/VisionLogo.png" style="width: 158px !important; " />
                </div>
                <div id="MIMIS" class="pt-1 mb-md-2 text-md-center text-start col-md col-12 px-0 d-flex justify-content-end">
                    <label class="">

                        وزارة التعليم<br />
                        Ministry of Education<br />043
                    </label>
                </div>

            </div>
            <hr class="w-100" />
            <div id="uninadee" style="padding:0;display:inline-flex;justify-content:space-between;flex-wrap:wrap; flex-direction:row;width:100%;">
                <div dir="rtl" style="display: inline-flex; justify-content: flex-start; flex-direction: row; align-items: baseline;">
                    <span class="modal-title " data-eformid="@Model.ID" style="direction:rtl;font-weight:bolder" id="Eform-UnitName">@ViewBag.UnitARName</span>
                </div>
                <div dir="ltr" style="padding: 0; display: inline-flex; justify-content: flex-start; flex-direction: row; align-items: baseline;">
                    <span id="Eform-UnitNameEN" style="direction: ltr; font-weight: bolder">@ViewBag.UnitENName</span>
                </div>
            </div>

            <div id="EformNameHandelCom" style="padding:0;display:inline-flex;justify-content:space-between;align-items:center;width:100%;margin-top:15px;">
                <h6 class="modal-title w-100" style="text-align:right;direction:rtl">
                    اسم النموذج:
                    <br />
                    @Model.Name
                </h6>
                <h6 class="modal-title w-100" style="text-align:left;direction:ltr">
                    E-Form Name:
                    <br />
                    @Model.Name_EN
                </h6>
                <div style="display: inline-flex; justify-content: flex-end; flex-direction: row; width: 100%; align-items: baseline;">
                    <span dir="ltr">@ViewBag.EfCode</span>
                </div>
            </div>
            <hr class="w-100" />
        </div>
        <div class="modal-body" style="padding: 0px 40px 0 40px;">
            <div class="row w-100 p-0 m-0">
                <div class="col-12 p-0 my-3">
                    <div class="row m-0 w-100 main-head-title">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width: 100%; direction: rtl; font-weight: bolder; ">
                                1.1- البيانات الشخصية
                            </label>
                            <label style="width: 100%; direction: ltr; font-weight: bolder;">1.1- Personal Information </label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100" style="padding-top: 15px;">
                        @foreach (var qty in Model.Question.Where(q => q.T == "E"))
                        {
                            <div class="col-md-6 col-12 justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN">
                                <div class="d-inline-flex flex-row w-100 align-items-center">
                                    <label>
                                        <span class="ar-qty-head">@qty.Name</span> <br /> <span class="en-qty-head">@qty.Name_EN</span>
                                    </label>
                                        <label class="data-here" data-ref="@qty.Ref" style="color: black !important; overflow-wrap: break-word;">  </label>
                                </div>
                                <div class="row w-100 mt-3 m-0">
                                    <hr />
                                </div>
                            </div>
                        }

                    </div>
                </div>
                <div class="col-12 p-0 my-3">
                    <div class="row m-0 w-100 main-head-title">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width: 100%; direction: rtl; font-weight: bolder;">
                                1.2- البيانات الشخصية الإضافية
                            </label>
                            <label style="width: 100%; direction: ltr; font-weight: bolder;">1.2- Extra Personal Information </label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100" style="padding-top: 15px;">
                        @foreach (var qty in Model.Question.Where(q => q.T != "E"))
                        {
                            switch (qty.T)
                            {
                                case "I":
                                    <div class="col-md-6 col-12 justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <div class="d-inline-flex flex-row w-100 align-items-center">
                                            <label>
                                                <span class="ar-qty-head">@qty.Name</span> <br /><span class="en-qty-head"> @qty.Name_EN</span>
                                            </label>
                                            <label class="data-here"></label>
                                            @*<input class="form-control" placeholder="@(isar?qty.Input.PlaceHolder:qty.Input.PlaceholderEN)" type="@(qty.Input.ISNum?"number":"text")" />*@
                                        </div>
                                        <div class="row w-100 mt-3 m-0">
                                            <hr />
                                        </div>
                                    </div>
                                    break;
                                case "C":
                                    <div class="col-md-6 col-12 align-items-center " data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <div class="d-inline-flex flex-row w-100 align-items-center">
                                            <div>
                                                <span class="ar-qty-head">@qty.Name</span> <br /> <span class="en-qty-head">@qty.Name_EN</span>
                                            </div>
                                            <div class="row justify-content-center d-flex data-here">
                                                
                                                
                                            </div>
                                        </div>
                                        <div class="row w-100 mt-3 m-0">
                                            <hr />
                                        </div>
                                    </div>
                                    break;
                                case "R":
                                    <div class="col-md-6 col-12 align-items-center " data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <div class="d-inline-flex flex-row w-100 align-items-center">
                                            <div>
                                                <span class="ar-qty-head">@qty.Name</span> <br /> <span class="en-qty-head">@qty.Name_EN</span>
                                            </div>
                                            <div class="row justify-content-center d-flex data-here">
                                               
                                            </div>
                                        </div>
                                        <div class="row w-100 mt-3 m-0">
                                            <hr />
                                        </div>
                                    </div>
                                    break;
                                case "D":
                                    <div class="col-md-6 col-12 d-inline-flex justify-content-between" data-id="@qty.T-@qty.ID" data-name="@qty.Name-@qty.Name_EN" data-required="@qty.Requird">
                                        <label>
                                            <span class="ar-qty-head">@qty.Name</span> <br /> <span class="ar-qty-head">@qty.Name_EN</span>
                                        </label>
                                        <label class="data-here"></label>
                                    </div>
                                    break;
                                case "S":
                                    <div class="@(qty.Sepa.Empty?"EmptySpace":"Space") col-12">

                                    </div>
                                    break;
                                case "T":
                                    <div class="border col-12 eform-qty-title">
                                        <div class="d-inline-flex w-100 p-2 flex-md-row flex-column align-items-baseline">
                                            <div class="w-100"><h4 style="text-align:end;direction:rtl;margin-bottom: 0px;color: var(--main-btn-color);">@qty.Name | </h4></div>
                                            <div class="w-100">
                                                <h4 style="text-align: end;direction: ltr; margin-bottom: 0px; color: var(--main-btn-color);">@qty.Name_EN</h4>
                                            </div>
                                        </div>
                                    </div>
                                    break;
                                case "P":
                                    <div class="border" style="text-align:start">
                                        <p style="margin-bottom: 0px;width:100%; text-align: start; color: var(--main-btn-color);direction:rtl">
                                            <span class="ar-qty-head">@qty.Para.Name</span>
                                        </p>
                                        <p style="margin-bottom: 0px;width:100%; text-align: start; color: var(--main-btn-color);direction:ltr">
                                            <span class="ar-qty-head">@qty.Para.Name_En</span>
                                        </p>
                                    </div>
                                    break;
                                default:
                                    break;
                            }

                        }

                    </div>
                </div>
                <div class="col-12 p-0 my-3">
                    <div class="row m-0 w-100 main-head-title">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section">
                            <label style="width: 100%; direction: rtl; font-weight: bolder;">
                                2- بيانات الطلب
                            </label>
                            <label style="width: 100%; direction: ltr; font-weight: bolder;">2- Request Information </label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section t-start">
                            <label style="width:100%;direction:rtl">
                                <span style=" font-weight: bolder;">
                                    نوع الطلب | Request Type
                                </span>
                                <label style="border:0;margin:0 5px" id="eform-reqType"></label>
                            </label>
                            <label style="width: 100%; direction: rtl">
                                <span style=" font-weight: bolder;">  نوع الخدمة | Service Type</span>
                                <label style="border:0;margin:0 5px" id="eform-ServType"></label>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="col-12 my-3">
                    <div class="row m-0 w-100 main-head-title">
                        <div class="p-0 justify-content-between d-inline-flex align-items-center">
                            <label style="width: 100%; direction: rtl; font-weight: bolder;">
                                3- الاعتمادات
                            </label>
                            <label style="width: 100%; direction: ltr; font-weight: bolder;">3- Approvals</label>
                        </div>
                    </div>
                    <div class="row border-section m-0 w-100">

                    </div>
                </div>
                @{
                    var count = 1;
                }
                @foreach (var i in Model.Eform_Approval)
                {
                    <div class="col-12 p-0 my-3">
                        <div class="row m-0 w-100  main-head-title">
                            <div class="p-0 justify-content-between d-inline-flex align-items-center eform-section" style=" font-weight: bolder;">
                                <label style="width:100%;direction:rtl">
                                    @(count).3 @i.AR
                                </label>
                                <label style="width:100%;direction:ltr">3.@count @i.EN</label>
                            </div>
                        </div>
                        <div class="row border-section m-0 w-100" style="height:40px">

                        </div>
                    </div>
                    count++;
                }
            </div>

        </div>
    </div>
</div>

