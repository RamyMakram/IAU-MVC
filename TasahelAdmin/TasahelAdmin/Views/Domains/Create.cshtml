                        <span asp-validation-for="DomainStyle.Maincolor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainStyle.Secondcolor" class="control-label"></label>
                        <input asp-for="DomainStyle.Secondcolor" class="form-control" />
                        <span asp-validation-for="DomainStyle.Secondcolor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainStyle.Thirdcolor" class="control-label"></label>
                        <input asp-for="DomainStyle.Thirdcolor" class="form-control" />
                        <span asp-validation-for="DomainStyle.Thirdcolor" class="text-danger"></span>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend>Email And SMS</legend>

               <div class="container">
                    <div class="form-group">
                        <label asp-for="DomainEmail.Name" class="control-label"></label>
                        <input asp-for="DomainEmail.Name" class="form-control" />
                        <span asp-validation-for="DomainEmail.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainEmail.Smtp" class="control-label"></label>
                        <input asp-for="DomainEmail.Smtp" class="form-control" />
                        <span asp-validation-for="DomainEmail.Smtp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainEmail.Port" class="control-label"></label>
                        <input asp-for="DomainEmail.Port" class="form-control" />
                        <span asp-validation-for="DomainEmail.Port" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainEmail.Email" class="control-label"></label>
                        <input asp-for="DomainEmail.Email" class="form-control" />
                        <span asp-validation-for="DomainEmail.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainEmail.UserName" class="control-label"></label>
                        <input asp-for="DomainEmail.UserName" class="form-control" />
                        <span asp-validation-for="DomainEmail.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainEmail.Password" class="control-label"></label>
                        <input asp-for="DomainEmail.Password" class="form-control" />
                        <span asp-validation-for="DomainEmail.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainEmail.MessageAppSid" class="control-label"></label>
                        <input asp-for="DomainEmail.MessageAppSid" class="form-control" />
                        <span asp-validation-for="DomainEmail.MessageAppSid" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DomainEmail.Sender" class="control-label"></label>
                        <input asp-for="DomainEmail.Sender" class="form-control" />
                        <span asp-validation-for="DomainEmail.Sender" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="DomainEmail.UseMessages" /> @Html.DisplayNameFor(model => model.DomainEmail.UseMessages)
                        </label>
                    </div>
               </div>
            </fieldset>
