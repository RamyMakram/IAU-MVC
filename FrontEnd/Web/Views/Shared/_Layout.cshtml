                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.ToString().ToLower().Contains("main")?"active":"")" href="~/Main">الرئيسية</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.ToString().ToLower().Contains("home") ||Request.Url.ToString().Contains("Follow")?"active":"")" aria-current="page" href="~/Home">تقديم/متابعة طلب</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.ToString().ToLower().Contains("Coordinator")?"active":"")" href="~/Coordinator">المنسقين</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.ToString().ToLower().Contains("contactus")?"active":"")" href="/Contactus">المساعدة والدعم الفني</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.ToString().ToLower().Contains("main")?"active":"")" href="~/Main">Main</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.ToString().ToLower().Contains("home")||Request.Url.ToString().Contains("Follow")?"active":"")" aria-current="page" href="~/Home">Submit/Follow-up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.ToString().ToLower().Contains("coordinator")?"active":"")" href="~/Coordinator">Coordinator</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Request.Url.ToString().ToLower().Contains("contactus")?"active":"")" href="/Contactus">help and support</a>
                        </li>

                    }
                    <li id="nav-contact" style="display:none;">
                        <a class="nav-link" href="/Contactus">@(ViewBag.CookieLang == "ar" ? "اتصل بنا" : "Contact")</a>
                    </li>
                    <li id="nav-lang" style="display:none;">
                        <a class="nav-link"
                           href=@(Request.Cookies["lang"].Value == "ar" ? Url.Action("ChangeLang","Home",new { lang="en",redirect=Request.Url.ToString()})
													: Url.Action("ChangeLang","Home",new { lang="ar",redirect=Request.Url.ToString()}))>
                            @(Request.Cookies["lang"].Value == "ar" ? "EN" : "AR")
                        </a>
                    </li>

                </ul>
                <div class="vision">
