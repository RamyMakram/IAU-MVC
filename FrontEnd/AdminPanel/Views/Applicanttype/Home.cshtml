@model ICollection<IAUAdmin.DTO.Entity.ApplicantTypeDTO>
@{
    ViewBag.Title = "Home Page";
    ViewBag.pageTitle = "Home Page";
    ViewBag.pTitle = "Mustafid List";
    ViewBag.arTitle = "الرئيسية";
    ViewBag.arpageTitle = "الرئيسية";
    ViewBag.arpTitle = "قائمة المستفيدين";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var isar = Request.Cookies["lang"].Value == "ar";
}

<!-- DataTables -->
<link href="~/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<link href="~/assets/libs/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
<!-- Responsive datatable examples -->
<link href="~/assets/libs/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="HeaderOfPage">
                    <p class="card-title-desc">
                        @(isar? "قائمة المستفيدين" : "Mustafid List")
                    </p>

                    <a class="btn btn-circle" href=@Url.Action("Create")><i class="fas fa-plus-circle"></i></a>
                </div>
                <table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
                    <thead>
                        <tr>
                            <th key="t-name">Location Name</th>
                            <th key="t-enname">Location En Name</th>
                            <th key="t-activeTitle">Status</th>
                            <th>@(isar?"منسوبي الجامعة":"IAU Affliated")</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var i in Model)
                        {
                            <tr>
                                <td class="TH-ar">@i.Applicant_Type_Name_AR</td>
                                <td class="TH-en">@i.Applicant_Type_Name_EN</td>
                                <td>@(i.Affliated?isar?"نعم":"Yes": isar ? "لا" : "No")</td>
                                <td>
                                    @Html.ActionLink("Active", i.IS_Action.Value ? "Deactive" : "Active", "Applicanttype", new { Id = i.Applicant_Type_ID }, new { @class = i.IS_Action.Value ? "btn btn-primary active" : "btn btn-danger deactive", @key = i.IS_Action.Value ? "t-active-Home" : "t-deactive-Home" })
                                </td>
                                <td>@Html.ActionLink("Edit", "Edit", new { Id = i.Applicant_Type_ID }, new { @class = "btn btn-primary", @key = "t-edit" })</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div> <!-- end col -->
</div> <!-- end row -->
<!-- JAVASCRIPT -->
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>
<script src="~/assets/js/lang/jquery.multiLanguage.js"></script>

